{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es6"],                                       
      "module": "CommonJS",                                
      "rootDir": "src",
      "resolveJsonModule": true,
      "outDir": "./build",                                  
      "esModuleInterop": true,   
      "moduleResolution": "Node",                          
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
      "noImplicitAny": true,                                                  
      "skipLibCheck": true,
      "isolatedModules": false,
      "allowJs": true,                              
    },
    "include": [
        "src"
    ]
  }